{
  "name": "animate-loading",
  "type": "module",
  "version": "2.0.0",
  "description": "Lightweight TypeScript loading bar library like Shopify, Github, JSFiddle... that works!",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.js"
    },
    "./dist/main.css": "./dist/main.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.0",
    "vite": "^7.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Weaverse/animate-loading-bar.git"
  },
  "keywords": [
    "loading-bar",
    "progress-bar",
    "loading-indicator",
    "vanilla-js",
    "typescript",
    "css",
    "animation",
    "ui",
    "frontend",
    "web-components"
  ],
  "author": "Leo @ https://leohuynh.dev",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": [
    "*.css"
  ],
  "bugs": {
    "url": "https://github.com/Weaverse/animate-loading-bar/issues"
  },
  "homepage": "https://github.com/Weaverse/animate-loading-bar#readme"
}